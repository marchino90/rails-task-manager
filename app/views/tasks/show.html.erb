<h1>Specific task</h1>

<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p>Completed</p>
<% else %>
<p>not completed</p>
<% end %>

<%= link_to "Edit", mango_path(@task) %>
<%=link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
